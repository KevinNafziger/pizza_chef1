<div id="<%= dom_id topping %>" style="border:1px solid" class="card Gmodule md:w-2/3 card--1 flex flex-col justify-between">
  <p class="my-5 flex-grow">
    <strong class="block font-medium mb-1 brandh1"><%= topping.name %></strong>
  </p>
  <div class="mx-auto justiy-contents-bottom">
    <%= link_to edit_topping_path(topping), class: "rounded py-3 ml-2 px-5 bg-gray-50 inline-block" do %>
      <i class="fa fa-edit"></i> Edit
    <% end %>
    <div class="inline-block ml-2">
      <%= button_to topping_path(topping), method: :delete, class: "mt-1 rounded py-3 px-5 bg-gray-50" do %>
        <i class="fa fa-trash"></i> Delete
      <% end %>
    </div>
  </div>
</div>
