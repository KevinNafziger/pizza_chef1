<div  class="card Gmodule md:w-2/3 rounded-3xl flex flex-col justify-between" style="border:1px solid; border-color:#8A0A0A;" >
  <p class="my-3 flex-grow">
    <strong style="overflow-wrop:break-word;"
    class="block font-medium mb-0 p-1" style="color:#fdb515;"><%= pizza.name %></strong>
  </p>

  <div class="flex-grow mt-3 mb-3">
    <% unless pizza.toppings.empty? %>
      <div style="color:#8A0A0A;" class="m-1">
        <b>Toppings:</b><br>
        <%= pizza.toppings.pluck(:name).join(', ') %>
      </div>
    <% end %>
  </div>

  <div style="color:#8A0A0A;" class="mx-auto justiy-contents-bottom">
    <%= link_to edit_pizza_path(pizza.id),"data-controller": "turbo", class: " hover:ring-2 hover:ring-yellow-400 rounded py-3 ml-2 px-5 bg-gray-50 inline-block" do %>
      <i class="fa fa-edit"></i> Edit
    <% end %>

    <div style="color:#8A0A0A;"  class="inline-block ml-2">
      <%= button_to pizza_path(pizza), method: :delete, data: { "turbo_method": :delete }, style: "color:#8A0A0A", class: "hover:ring-2 hover:ring-yellow-400 mt-1 rounded py-3 px-5 bg-gray-50" do %>
        <i class="fa fa-trash"></i> Delete
      <% end %>
    </div>
  </div>  <!--- end div action and icon section -->
</div>  <!--- end card-->
